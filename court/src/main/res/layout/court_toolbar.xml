<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="60dp"
    android:padding="9dp">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/court_toolbar_tablayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:tabTextAppearance="@style/TabTextSize"
        app:tabSelectedTextColor="@color/black"
        app:tabTextColor="@color/dynamic_unselect"
        app:tabIndicatorColor="@color/classic"
        app:tabRippleColor = "@android:color/transparent"

        />

    <Button
        android:id="@+id/court_toolbar_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/court_add"
        app:backgroundTint="@color/classic"
        />

</androidx.constraintlayout.widget.ConstraintLayout>