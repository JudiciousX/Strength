<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">


        <TextView
            android:id="@+id/poi_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4555555555555555"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/poi_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="455555555555555555"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="@+id/poi_text"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/poi_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="@id/poi_des"
            app:layout_constraintStart_toStartOf="parent"/>


    <ImageView
        android:id="@+id/poi_reserve"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/home_reserve"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="false" />


</androidx.constraintlayout.widget.ConstraintLayout>