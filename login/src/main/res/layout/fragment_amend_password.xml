<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/back_button_2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/back"/>

    <TextView
        android:id="@+id/Title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/back_button_2"
        app:layout_constraintBottom_toBottomOf="@id/back_button_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="设置密码"
        android:textSize="26dp"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/password_icon_2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/password"
        app:layout_constraintEnd_toStartOf="@id/password_edit_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button_2"/>

    <EditText
        android:id="@+id/password_edit_2"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/shape"
        android:hint="输入新密码"
        app:layout_constraintBottom_toBottomOf="@id/password_icon_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/password_icon_2"
        app:layout_constraintTop_toTopOf="@id/password_icon_2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/password1_icon_2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/password2"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toStartOf="@id/password1_edit_2"
        app:layout_constraintTop_toBottomOf="@id/password_icon_2"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/password1_edit_2"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/shape"
        android:hint="再次输入新密码"
        app:layout_constraintStart_toEndOf="@id/password1_icon_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/password1_icon_2"
        app:layout_constraintBottom_toBottomOf="@id/password1_icon_2"/>

    <TextView
        android:id="@+id/Determine_text_2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/shape1"
        android:layout_marginTop="70dp"
        android:text="确定"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/password1_icon_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>