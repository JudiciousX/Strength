<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/back_button_1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/back"/>

    <TextView
        android:id="@+id/Title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/back_button_1"
        app:layout_constraintBottom_toBottomOf="@id/back_button_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="忘记密码"
        android:textSize="26dp"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/user_icon_1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/user"
        app:layout_constraintEnd_toStartOf="@id/user_edit_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button_1"/>

    <EditText
        android:id="@+id/user_edit_1"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/shape"
        android:hint="手机号"
        app:layout_constraintBottom_toBottomOf="@id/user_icon_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/user_icon_1"
        app:layout_constraintTop_toTopOf="@id/user_icon_1"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/token_icon_1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/token"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toStartOf="@id/token_edit_1"
        app:layout_constraintTop_toBottomOf="@id/user_icon_1"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/token_edit_1"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/shape"
        android:hint="获取验证码"
        app:layout_constraintStart_toEndOf="@id/token_icon_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/token_icon_1"
        app:layout_constraintBottom_toBottomOf="@id/token_icon_1"/>

    <TextView
        android:id="@+id/send_button_1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/shape1"
        android:text=" 发送验证码 "
        android:textSize="12dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/token_edit_1"
        app:layout_constraintTop_toTopOf="@id/token_edit_1"
        app:layout_constraintBottom_toBottomOf="@id/token_edit_1"/>


    <TextView
        android:id="@+id/Determine_text_1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/shape1"
        android:layout_marginTop="70dp"
        android:text="下一步"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/token_icon_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>